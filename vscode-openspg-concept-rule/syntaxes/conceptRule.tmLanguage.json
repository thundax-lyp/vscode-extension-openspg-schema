{
    "comment": "OpenSPG Concept Rule Syntax: version 2.0",
    "name": "OpenSPG Concept Rule",
    "scopeName": "source.rule",
    "fileTypes": [
        "conceptRule"
    ],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#operators"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.block.conceptRule",
                    "begin": "/\\*",
                    "end": "\\*/",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.comment.begin.conceptRule"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.comment.end.conceptRule"
                        }
                    },
                    "patterns": [
                        {
                            "name": "keyword.other.documentation.conceptRule"
                        }
                    ]
                },
                {
                    "begin": "(^[ \t]+)?(?=//)",
                    "end": "(?!\\G)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.comment.leading.conceptRule"
                        }
                    },
                    "patterns": [
                        {
                            "name": "comment.line.hash.conceptRule",
                            "begin": "//",
                            "end": "\\n",
                            "beginCaptures": {
                                "0": {
                                    "name": "punctuation.definition.comment.conceptRule"
                                }
                            }
                        }
                    ]
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.right-arrow.conceptRule",
                    "match": "\\->"
                },
                {
                    "name": "keyword.operator.conceptRule",
                    "match": "[\\:\\.,()\\[\\]{}\\-]"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.single.conceptRule",
                    "begin": "'",
                    "end": "'",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.conceptRule"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.conceptRule"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#escapes"
                        },
                        {
                            "name": "constant.character.escape.newline.conceptRule",
                            "match": "\\\n"
                        },
                        {
                            "name": "invalid.illegal.character-not-allowed-here.conceptRule",
                            "match": "\n"
                        }
                    ]
                },
                {
                    "name": "string.quoted.double.conceptRule",
                    "begin": "\"",
                    "end": "\"",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.conceptRule"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.conceptRule"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#escapes"
                        },
                        {
                            "name": "constant.character.escape.newline.conceptRule",
                            "match": "\\\n"
                        },
                        {
                            "name": "invalid.illegal.character-not-allowed-here.conceptRule",
                            "match": "\n"
                        }
                    ]
                },
                {
                    "name": "string.quoted.grave.conceptRule",
                    "begin": "`",
                    "end": "`",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.conceptRule"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.conceptRule"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#escapes"
                        }
                    ]
                }
            ],
            "repository": {
                "escapes": {
                    "name": "constant.character.escape.conceptRule",
                    "match": "\\\\(x\\h{2}|[0-2][0-7]{0,2}|3[0-6][0-7]|37[0-7]?|[4-7][0-7]?|.)"
                }
            }
        }
    }
}
